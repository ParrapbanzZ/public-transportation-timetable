{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true
    },

    "include": [
        "./src/**/*",
        "./src/components/*.tsx",
        "./src/stores/*.ts",
        "./spec/**/*"
    ],

  "filesGlob": [
    "**/*.tsx"
  ],

  "atom": {
    "rewriteTsconfig": false
  }
}
